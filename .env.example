# Configuration de la base de données
MONGODB_URI=mongodb://localhost:27017/notification_service

# Configuration Redis
REDIS_URL=redis://localhost:6379

# Configuration SMTP pour l'envoi d'emails (remplace SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre_email@gmail.com
SMTP_PASS=votre_mot_de_passe_application

# Configuration de l'expéditeur
FROM_NAME=Notification Service
FROM_EMAIL=votre_email@gmail.com

# Configuration Twilio pour les SMS
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Configuration JWT
JWT_SECRET=your_jwt_secret_key

# Port du serveur
PORT=3000

# Environnement
NODE_ENV=development
